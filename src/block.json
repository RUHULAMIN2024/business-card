{
  "apiVersion": 2,
  "name": "business/card",
  "title": "Business Card",
  "description": "Show your business card in web.",
  "category": "widgets",
  "keywords": ["business", "card", "address"],
  "textdomain": "business-card",
  "attributes": {
    "align": {
      "type": "string",
      "default": ""
    },
    "name": {
      "type": "string",
      "default": "Jonathon Doe",
      "selector": ".bcbBusinessCard .name"
    },
    "title": {
      "type": "string",
      "default": "Chief Executive Officer",
      "selector": ".bcbBusinessCard .title"
    },
    "contacts": {
      "type": "array",
      "default": [
        {
          "icon": {
            "class": "fas fa-map-marker-alt"
          },
          "text": "Your Address, State, City, Country, 0000"
        },
        {
          "icon": {
            "class": "fas fa-phone-alt"
          },
          "text": "+000 0000-00000"
        },
        {
          "icon": {
            "class": "fas fa-envelope"
          },
          "text": "example@mail.com"
        },
        {
          "icon": {
            "class": "fas fa-globe"
          },
          "text": "https://example.com"
        }
      ]
    },
    "alignment": {
      "type": "string",
      "default": "center"
    },
    "width": {
      "type": "string",
      "default": "600px"
    },
    "theme": {
      "type": "string",
      "default": "default"
    },
    "background": {
      "type": "object",
      "default": {
        "color": "#0000"
      }
    },
    "padding": {
      "type": "object",
      "default": {
        "vertical": "30px",
        "horizontal": "25px"
      }
    },
    "border": {
      "type": "object",
      "default": {}
    },
    "shadow": {
      "type": "object",
      "default": {
        "blur": "10px",
        "color": "#4527a480"
      }
    },
    "headerAlign": {
      "type": "string",
      "default": "start"
    },
    "headerMargin": {
      "type": "object",
      "default": {
        "side": 4,
        "bottom": "30px"
      }
    },
    "nameTypo": {
      "type": "object",
      "default": {
        "fontSize": {
          "desktop": 30,
          "tablet": 26,
          "mobile": 22
        },
        "fontWeight": 700,
        "textTransform": "uppercase"
      }
    },
    "nameColor": {
      "type": "string",
      "default": "#4527a4"
    },
    "titleTypo": {
      "type": "object",
      "default": {
        "fontSize": {
          "desktop": 18,
          "tablet": 17,
          "mobile": 16
        },
        "fontWeight": 500
      }
    },
    "titleColor": {
      "type": "string",
      "default": "#828282"
    },
    "isHeaderSep": {
      "type": "boolean",
      "default": true
    },
    "headerSep": {
      "type": "object",
      "default": {
        "width": "20%",
        "height": "2px",
        "style": "solid",
        "color": "#828282"
      }
    },
    "contactIconColors": {
      "type": "object",
      "default": {
        "color": "#fff",
        "bg": "#4527a4"
      }
    },
    "contactTextTypo": {
      "type": "object",
      "default": {
        "fontSize": {
          "desktop": 15,
          "tablet": 15,
          "mobile": 15
        }
      }
    },
    "contactTextColor": {
      "type": "string",
      "default": "#828282"
    },
    "socials": {
      "type": "array",
      "default": [
        {
          "icon": {
            "class": "fa-brands fa-linkedin-in"
          },
          "link": "https://example.com",
          "openInNewTab": true
        },
        {
          "icon": {
            "class": "fa-brands fa-twitter"
          },
          "link": "https://example.com",
          "openInNewTab": true
        },
        {
          "icon": {
            "class": "fa-brands fa-instagram"
          },
          "link": "https://example.com",
          "openInNewTab": true
        }
      ]
    },
    "businessCard": {
      "type": "object",
      "default": {
        "tagline": "Building the future, one line at a time",
        "company": "Tech Crop"
      }
    },
    "businessCardStyles": {
      "type": "object",
      "default": {
        "tagline": {
          "typo": {
            "fontSize": {
              "desktop": "0.75rem",
              "tablet": "",
              "mobile": ""
            },
            "fontStyle": "italic"
          },
          "color": "#fff"
        },
        "company": {
          "typo": {
            "fontSize": {
              "desktop": 12,
              "tablet": 12,
              "mobile": 12
            },
            "fontWeight": 600
          },
          "color": "#fff"
        },
        "sidebarBg": {
          "color": "#1e40af"
        }
      }
    }
  },
  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "example": {
    "attributes": {
      "preview": true
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": ["file:./view.css", "fontAwesome"],
  "render": "file:./render.php",
  "viewScript": "file:./view.js"
}
